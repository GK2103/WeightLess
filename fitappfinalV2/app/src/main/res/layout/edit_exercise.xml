<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context=".Edit_exercise">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/banner_colour"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editexercise"
            android:layout_width="215dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Exercise"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editsets"
            android:layout_width="217dp"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="number"
            android:text="Sets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editexercise" />

        <EditText
            android:id="@+id/editreps"
            android:layout_width="217dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="number"
            android:text="Reps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editsets" />

        <EditText
            android:id="@+id/editweight"
            android:layout_width="215dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="number"
            android:text="Weight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editreps" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/deleteIV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/banner_colour"
        android:elevation="10dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:srcCompat="@drawable/baseline_delete_24" />

    <ImageView
        android:id="@+id/editIV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/banner_colour"
        android:padding="5dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:srcCompat="@drawable/baseline_edit_24" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="169dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/banner_colour"
        android:padding="3dp"
        android:elevation="10dp"
        android:text="Press the bin icon to delete an entry, return to Exercise Log to see change."
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteIV" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="187dp"
        android:layout_height="81dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/banner_colour"
        android:padding="3dp"
        android:text="To edit logs enter in the new values then press the pencil icon, return to Meal Log to see change."
        android:textStyle="bold"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/editIV" />
</androidx.constraintlayout.widget.ConstraintLayout>